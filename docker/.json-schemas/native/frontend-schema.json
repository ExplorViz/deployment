{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "image": { "const": "explorviz/explorviz-frontend:dev" },
    "networks": {
      "type": "array",
      "items": [{ "enum": ["explorviz"] }]
    },
    "ports": {
      "type": "array",
      "items": [{ "enum": ["${FRONTEND_PORT}:80"] }]
    },
    "environment": {
      "type": "array",
      "allOf": [
        {
          "contains": {
            "enum": [
              "LANDSCAPE_URL=http://${FRONTEND_HOST_NAME}:${LANDSCAPE_SERV_PORT}"
            ]
          }
        },
        {
          "contains": {
            "enum": [
              "TRACE_URL=http://${FRONTEND_HOST_NAME}:${TRACE_SERV_PORT}"
            ]
          }
        },
        {
          "contains": {
            "enum": ["USER_URL=http://${FRONTEND_HOST_NAME}:${USER_SERV_PORT}"]
          }
        },
        {
          "contains": {
            "enum": [
              "COLLAB_URL=ws://${FRONTEND_HOST_NAME}:${COLLAB_SERV_PORT}"
            ]
          }
        },
        {
          "contains": {
            "enum": ["FRONTEND_HOST_NAME=${FRONTEND_HOST_NAME}"]
          }
        }
      ]
    }
  },
  "required": ["image", "networks", "ports", "environment"]
}
