{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "image": { "const": "explorviz/explorviz-frontend:dev" },
    "ports": {
      "type": "array",
      "items": [{ "enum": ["${FRONTEND_PORT}:80"] }]
    },
    "environment": {
      "type": "array",
      "allOf": [
        {
          "contains": {
            "enum": [
              "LANDSCAPE_URL=http://${LANDSCAPE_HOSTNAME}:${LANDSCAPE_PORT}"
            ]
          }
        },
        {
          "contains": {
            "enum": ["TRACE_URL=http://${TRACE_HOSTNAME}:${TRACE_PORT}"]
          }
        },
        {
          "contains": {
            "enum": ["USER_URL=http://${USER_HOSTNAME}:${USER_PORT}"]
          }
        },
        {
          "contains": {
            "enum": [
              "COLLABORATION_URL=http://${COLLABORATION_HOSTNAME}:${COLLABORATION_PORT}"
            ]
          }
        },
        {
          "contains": {
            "enum": ["COLLABORATION_SOCKET_PATH=/v2/vr/"]
          }
        },
        {
          "contains": {
            "enum": ["FRONTEND_HOST_NAME=${FRONTEND_HOST_NAME}"]
          }
        },
        {
          "contains": {
            "enum": [
              "FRONTEND_HOST_URL=http://${FRONTEND_HOST_NAME}:${FRONTEND_PORT}"
            ]
          }
        },
        {
          "contains": {
            "enum": ["AUTH0_LOGO_URL=${AUTH0_LOGO_URL}"]
          }
        },
        {
          "contains": {
            "enum": ["AUTH0_CALLBACK_URL=${AUTH0_CALLBACK_URL}"]
          }
        },
        {
          "contains": {
            "enum": ["AUTH0_LOGOUT_URL=${AUTH0_LOGOUT_URL}"]
          }
        }
      ]
    }
  },
  "required": ["image", "ports", "environment"]
}
