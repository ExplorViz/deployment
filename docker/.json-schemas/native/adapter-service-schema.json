{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "image": { "const": "explorviz/adapter-service-native:latest" },
    "environment": {
      "type": "array",
      "allOf": [
        {
          "contains": {
            "enum": [
              "QUARKUS_KAFKA_STREAMS_SCHEMA_REGISTRY_URL=http://schema-registry:8081"
            ]
          }
        },
        {
          "contains": {
            "enum": ["EXPLORVIZ_LOG_LVL=DEBUG"]
          }
        }
        ,
        {
          "contains": {
            "enum": [
              "EXPLORVIZ_VALIDATE_TOKEN_EXISTENCE=true"
            ]
          }
        }
      ]
    }
  },
  "required": ["image", "environment"]
}
