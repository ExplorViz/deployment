{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "image": { "const": "explorviz/adapter-service-native:latest" },
    "networks": {
      "type": "array",
      "items": [{ "enum": ["explorviz"] }]
    },
    "environment": {
      "type": "array",
      "allOf": [
        {
          "contains": {
            "enum": [
              "QUARKUS_KAFKA_STREAMS_SCHEMA_REGISTRY_URL=http://schema-registry:8081"
            ]
          }
        },
        {
          "contains": {
            "enum": ["EXPLORVIZ_LOG_LVL=DEBUG"]
          }
        }
      ]
    }
  },
  "required": ["image", "networks", "environment"]
}
