{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "image": { "const": "explorviz/user-service-jvm:latest" },
    "networks": {
      "type": "array",
      "items": [
        { "enum": ["explorviz"] }
      ]
    },
    "ports": {
      "type": "array",
      "items": [
        { "enum": ["${USER_SERV_PORT}:8080"] }
      ]
    },
    "environment": {
      "type": "array",
      "allOf": [
        {
          "contains": {
            "enum": [
              "MP_MESSAGING_OUTGOING_TOKEN_EVENTS_SCHEMA_REGISTRY_URL=http://schema-registry:${SCHEMA_REGISTRY_PORT}"
            ]
          }
        },
        {
          "contains": {
            "enum": [
              "QUARKUS_MONGODB_CONNECTION_STRING=mongodb://mongo-user:${MONGO_USER_SERV_PORT}"
            ]
          }
        }
        ,
        {
          "contains": {
            "enum": [
              "EXPLORVIZ_LOG_LVL=DEBUG"
            ]
          }
        }
      ]
    }
  },
  "required": ["image", "networks", "ports", "environment"]
}
