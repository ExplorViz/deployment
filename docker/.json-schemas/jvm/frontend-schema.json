{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "image": { "const": "explorviz/explorviz-frontend:dev" },
    "networks": {
      "type": "array",
      "items": [
        { "enum": ["explorviz"] }
      ]
    },
    "ports": {
      "type": "array",
      "items": [
        { "enum": ["4200:80"] }
      ]
    },
    "environment": {
      "type": "array",
      "allOf": [
        {
          "contains": {
            "enum": [
              "LANDSCAPE_URL=http://localhost:8082"
            ]
          }
        },
        {
          "contains": {
            "enum": [
              "TRACE_URL=http://localhost:8083"
            ]
          }
        }
        ,
        {
          "contains": {
            "enum": [
              "USER_URL=http://localhost:8084"
            ]
          }
        }
        ,
        {
          "contains": {
            "enum": [
              "COLLAB_URL=ws://localhost:8085"
            ]
          }
        }
      ]
    }
  },
  "required": ["image", "networks", "ports", "environment"]
}
