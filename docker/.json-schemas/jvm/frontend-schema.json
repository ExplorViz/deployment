{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "image": { "const": "explorviz/explorviz-frontend:dev" },
    "networks": {
      "type": "array",
      "items": [
        { "enum": ["explorviz"] }
      ]
    },
    "ports": {
      "type": "array",
      "items": [
        { "enum": ["${FRONTEND_PORT}:80"] }
      ]
    },
    "environment": {
      "type": "array",
      "allOf": [
        {
          "contains": {
            "enum": [
              "LANDSCAPE_URL=http://${FRONTEND_HOST_ADDRESS}:${LANDSCAPE_SERV_PORT}"
            ]
          }
        },
        {
          "contains": {
            "enum": [
              "TRACE_URL=http://${FRONTEND_HOST_ADDRESS}:${TRACE_SERV_PORT}"
            ]
          }
        }
        ,
        {
          "contains": {
            "enum": [
              "USER_URL=http://${FRONTEND_HOST_ADDRESS}:${USER_SERV_PORT}"
            ]
          }
        }
        ,
        {
          "contains": {
            "enum": [
              "COLLAB_URL=ws://${FRONTEND_HOST_ADDRESS}:${COLLAB_SERV_PORT}"
            ]
          }
        }
      ]
    }
  },
  "required": ["image", "networks", "ports", "environment"]
}
