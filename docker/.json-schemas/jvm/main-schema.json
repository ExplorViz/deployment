{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "services": {
      "description": "Service declaration for Docker",
      "type": "object",
      "items": {
        "type": "object"
      },
      "properties": {
        "adapter-service": {
          "$ref": "file:docker/.json-schemas/jvm/adapter-service-schema.json"
        },
        "landscape-service": {
          "$ref": "file:docker/.json-schemas/jvm/landscape-service-schema.json"
        },
        "trace-service": {
          "$ref": "file:docker/.json-schemas/jvm/trace-service-schema.json"
        },
        "user-service": {
          "$ref": "file:docker/.json-schemas/jvm/user-service-schema.json"
        },
        "collaboration-service": {
          "$ref": "file:docker/.json-schemas/jvm/collaboration-service-schema.json"
        },
        "frontend": {
          "$ref": "file:docker/.json-schemas/jvm/frontend-schema.json"
        }
      },
      "required": ["adapter-service", "landscape-service", "trace-service", "user-service", "collaboration-service", "frontend"]
    },
    "networks": {
      "description": "Network declaration for Docker-Compose network",
      "type": "object",
      "properties": {
        "explorviz": {
          "type": "object",
          "properties": {
            "name": { "enum": ["explorviz"] }
          },
          "required": ["name"]
        }
      },
      "required": ["explorviz"]
    }
  },
  "required": ["services", "networks"]
}
