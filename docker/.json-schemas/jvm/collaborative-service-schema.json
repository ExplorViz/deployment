{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "image": { "const": "explorviz/collaborative-service-jvm:latest" },
    "networks": {
      "type": "array",
      "items": [
        { "enum": ["explorviz"] }
      ]
    },
    "ports": {
      "type": "array",
      "items": [
        { "enum": ["8085:8080"] }
      ]
    },
    "environment": {
      "type": "array",
      "allOf": [
        {
          "contains": {
            "enum": [
              "EXPLORVIZ_LOG_LVL=DEBUG"
            ]  
          }
        }
      ]
    }
  },
  "required": ["image", "networks", "ports", "environment"]
}

