{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "services": {
      "description": "Environment declaration for Docker",
      "type": "object",
      "items": {
        "type": "object"
      },
      "properties": {
        "kafka": {
          "$ref": "file:docker/.json-schemas/env/kafka-schema.json"
        },
        "schema-registry": {
          "$ref": "file:docker/.json-schemas/env/schema-registry-schema.json"
        },
        "otel-collector": {
          "$ref": "file:docker/.json-schemas/env/otel-collector-schema.json"
        },
        "cassandra": {
          "$ref": "file:docker/.json-schemas/env/cassandra-schema.json"
        },
        "mongo-user": {
          "$ref": "file:docker/.json-schemas/env/mongo-user-schema.json"
        },
        "nginx": {
          "$ref": "file:docker/.json-schemas/env/nginx-schema.json"
        }
      },
      "required": ["kafka", "schema-registry", "otel-collector"]
    },
    "volumes": {
      "properties": {
        "kafka-data": {
          "properties": {
            "name" : {"const" : "explorviz-kafka-data"}
          },
          "required": ["name"]
        },
        "kafka-secrets": {
          "properties": {
            "name" : {"const" : "explorviz-kafka-secrets"}
          },
          "required": ["name"]
        },
        "init-kafka-data": {
          "properties": {
            "name" : {"const" : "explorviz-init-kafka-data"}
          },
          "required": ["name"]
        },
        "init-kafka-secrets": {
          "properties": {
            "name" : {"const" : "explorviz-init-kafka-secrets"}
          },
          "required": ["name"]
        },
        "schema-registry": {
          "properties": {
            "name" : {"const" : "explorviz-schema-registry"}
          },
          "required": ["name"]
        },
        "user-mongo-data": {
          "properties": {
            "name" : {"const" : "explorviz-mongo-user-data"}
          },
          "required": ["name"]
        },
        "user-mongo-configdb": {
          "properties": {
            "name" : {"const" : "explorviz-mongo-user-config"}
          },
          "required": ["name"]
        },
        "cassandra": {
          "properties": {
            "name" : {"const" : "explorviz-cassandra"}
          },
          "required": ["name"]
        }
      },
      "required": ["kafka-data", "kafka-secrets", "init-kafka-data", "init-kafka-secrets",  "schema-registry", "user-mongo-data", "user-mongo-configdb", "cassandra"]
    },
    "networks": {
      "description": "Network declaration for Docker-Compose network",
      "type": "object",
      "properties": {
        "explorviz": {
          "type": "object",
          "properties": {
            "name": { "enum": ["explorviz"] }
          },
          "required": ["name"]
        }
      },
      "required": ["explorviz"]
    }
  },
  "required": ["services", "volumes", "networks"]
}
