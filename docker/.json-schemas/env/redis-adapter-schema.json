{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "image": { "const": "redis:alpine3.13" },
    "container_name" : {"const": "redis-adapter-service"},
    "ports": { 
      "type" : "array",
      "items": [
        { "enum" : ["${REDIS_ADAPTER_SERV_PORT}:6379"]}
      ]
    },
    "volumes": {
      "type" : "array",
      "items": [
        { "enum" : ["redis-adapter:/data"] }
      ]
    },
    "networks": {
      "type": "array",
      "items": [
        { "enum": ["explorviz"] }
      ]
    }
  },
  "required": ["image", "ports", "volumes", "networks"]
}
