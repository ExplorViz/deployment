{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "image": { "const": "omnition/opencensus-collector:0.1.11" },
    "container_name" : {"const": "oc-collector"},
    "ports": {
      "type" : "array",
      "items": [
        { "enum" : ["${OC_COLLECTOR_PORT}:55678"]}
      ]
    },
    "depends_on": {
      "type" : "array",
      "items": [
        { "const" : "schema-registry"}
      ]
    },
    "volumes": {
      "type" : "array",
      "items": [
        { "enum" : ["./generic/oc-collector-config.yaml:/etc/oc-collector-config.yaml"] }
      ]
    },
    "networks": {
      "type": "array",
      "items": [
        { "enum": ["explorviz"] }
      ]
    }
  },
  "required": ["image", "ports", "depends_on", "volumes", "networks"]
}
