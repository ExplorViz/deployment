{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "image": { "const": "explorviz/frontend:${FRONTEND_IMAGE_TAG}" },
    "ports": {
      "type": "array",
      "items": [{ "enum": ["${FRONTEND_PORT}:80"] }]
    },
    "profiles": {
      "type": "array",
      "items": [{ "enum": ["jvm", "native"] }]
    },
    "environment": {
      "type": "array",
      "allOf": [
        {
          "contains": {
            "enum": ["VITE_SPAN_SERV_URL=http://${SPAN_HOSTNAME}:${SPAN_PORT}"]
          }
        },
        {
          "contains": {
            "enum": ["VITE_USER_SERV_URL=http://${USER_HOSTNAME}:${USER_PORT}"]
          }
        },
        {
          "contains": {
            "enum": ["VITE_COLLAB_SERV_URL=http://${COLLABORATION_HOSTNAME}:${COLLABORATION_PORT}"]
          }
        },
        {
          "contains": {
            "enum": ["FRONTEND_HOST_NAME=${FRONTEND_HOST_NAME}"]
          }
        },
        {
          "contains": {
            "enum": ["FRONTEND_HOST_URL=http://${FRONTEND_HOST_NAME}:${FRONTEND_PORT}"]
          }
        }
      ]
    }
  },
  "required": ["image", "ports", "environment"]
}
