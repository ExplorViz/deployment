{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "image": {
      "const": "explorviz/frontend:${FRONTEND_IMAGE_TAG}"
    },

    "ports": {
      "type": "array",
      "items": [
        { "enum": ["${FRONTEND_PORT}:80"] }
      ]
    },

    "profiles": {
      "type": "array",
      "items": [
        { "enum": ["frontend"] }
      ]
    },

    "environment": {
      "type": "array",
      "allOf": [
        {
          "contains": {
            "enum": ["FRONTEND_HOST_URL=http://${FRONTEND_HOST_NAME}:${FRONTEND_PORT}"]
          }
        },
        {
          "contains": {
            "enum": ["FRONTEND_HOST_NAME=${FRONTEND_HOST_NAME}"]
          }
        },
        {
          "contains": {
            "enum": ["CODE_AGENT_URL=http://${CODE_AGENT_HOSTNAME}:${CODE_AGENT_PORT_INTERNAL}"]
          }
        },
        {
          "contains": {
            "enum": ["CODE_SERV_URL=http://${CODE_HOSTNAME}:${CODE_PORT}"]
          }
        },
        {
          "contains": {
            "enum": ["LANDSCAPE_URL=http://${SPAN_HOSTNAME}:${SPAN_PORT_INTERNAL}"]
          }
        },
        {
          "contains": {
            "enum": ["TRACE_URL=http://${SPAN_HOSTNAME}:${SPAN_PORT_INTERNAL}"]
          }
        },
        {
          "contains": {
            "enum": ["TIMESTAMPS_URL=http://${SPAN_HOSTNAME}:${SPAN_PORT_INTERNAL}"]
          }
        },
        {
          "contains": {
            "enum": ["USER_URL=http://${USER_HOSTNAME}:${USER_PORT_INTERNAL}"]
          }
        },
        {
          "contains": {
            "enum": ["COLLABORATION_URL=http://${COLLABORATION_HOSTNAME}:${COLLABORATION_PORT}"]
          }
        },
        {
          "contains": {
            "enum": ["VSCODE_SERV_URL=http://${FRONTEND_HOST_NAME}:${FRONTEND_PORT}"]
          }
        },
        {
          "contains": {
            "enum": ["AUTH0_LOGO_URL=${AUTH0_LOGO_URL}"]
          }
        },
        {
          "contains": {
            "enum": ["AUTH0_CALLBACK_URL=${AUTH0_CALLBACK_URL}"]
          }
        },
        {
          "contains": {
            "enum": ["AUTH0_LOGOUT_URL=${AUTH0_LOGOUT_URL}"]
          }
        },
        {
          "contains": {
            "enum": ["NO_AUTH_USER_NICKNAME=${NO_AUTH_USER_NICKNAME}"]
          }
        }
      ]
    }
  },

  "required": ["image", "ports", "environment"]
}
