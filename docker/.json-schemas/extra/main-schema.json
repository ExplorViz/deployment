{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "services": {
      "description": "Declaration for Docker compose file",
      "type": "object",
      "items": {
        "type": "object"
      },
      "properties": {
        "kafka": {
          "$ref": "kafka-schema.json"
        },
        "redis-collab": {
          "$ref": "redis-schema.json"
        },
        "schema-registry": {
          "$ref": "schema-registry-schema.json"
        },
        "otel-collector": {
          "$ref": "otel-collector-schema.json"
        },
        "cassandra": {
          "$ref": "cassandra-schema.json"
        },
        "mongo-user": {
          "$ref": "mongo-user-schema.json"
        },
        "mongo-code": {
          "$ref": "mongo-code-schema.json"
        }
      },
      "required": [
        "kafka",
        "redis-collab",
        "schema-registry",
        "otel-collector",
        "cassandra",
        "mongo-user",
        "mongo-code"
      ]
    },
    "volumes": {
      "properties": {
        "kafka-data": {
          "properties": {
            "name": { "const": "explorviz-kafka-data" }
          },
          "required": ["name"]
        },
        "kafka-secrets": {
          "properties": {
            "name": { "const": "explorviz-kafka-secrets" }
          },
          "required": ["name"]
        },
        "init-kafka-data": {
          "properties": {
            "name": { "const": "explorviz-init-kafka-data" }
          },
          "required": ["name"]
        },
        "init-kafka-secrets": {
          "properties": {
            "name": { "const": "explorviz-init-kafka-secrets" }
          },
          "required": ["name"]
        },
        "schema-registry": {
          "properties": {
            "name": { "const": "explorviz-schema-registry" }
          },
          "required": ["name"]
        },
        "user-mongo-data": {
          "properties": {
            "name": { "const": "explorviz-mongo-user-data" }
          },
          "required": ["name"]
        },
        "user-mongo-configdb": {
          "properties": {
            "name": { "const": "explorviz-mongo-user-config" }
          },
          "required": ["name"]
        },
        "code-mongo-data": {
          "properties": {
            "name": { "const": "explorviz-mongo-code-data" }
          },
          "required": ["name"]
        },
        "code-mongo-configdb": {
          "properties": {
            "name": { "const": "explorviz-mongo-code-config" }
          },
          "required": ["name"]
        },
        "cassandra": {
          "properties": {
            "name": { "const": "explorviz-cassandra" }
          },
          "required": ["name"]
        }
      },
      "required": [
        "kafka-data",
        "kafka-secrets",
        "init-kafka-data",
        "init-kafka-secrets",
        "schema-registry",
        "user-mongo-data",
        "user-mongo-configdb",
        "code-mongo-data",
        "code-mongo-configdb",
        "cassandra"
      ]
    },
    "networks": {
      "description": "Network declaration for Docker-Compose network",
      "type": "object",
      "properties": {
        "default": {
          "type": "object",
          "properties": {
            "name": { "enum": ["explorviz"] }
          },
          "required": ["name"]
        }
      },
      "required": ["default"]
    }
  },
  "required": ["services", "volumes", "networks"]
}
